APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=zz   # This ensures we are always looking for the raw translation keys
APP_FALLBACK_LOCALE=zz

CACHE_STORE=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync
MAIL_MAILER=array

DB_CONNECTION=sqlite
DB_DATABASE=database/testing_%s.sqlite

# Prevent hitting external services during tests
FILESYSTEM_DISK=local
BROADCAST_DRIVER=log

LOG_CHANNEL=stderr
LOG_LEVEL=debug

# Ensure tests never use or read app caches from bootstrap/cache
# Point all cache artifact paths to /tmp so they are isolated per container/runner
APP_CONFIG_CACHE=/tmp/laravel-config-testing.php
APP_ROUTES_CACHE=/tmp/laravel-routes-testing.php
APP_EVENTS_CACHE=/tmp/laravel-events-testing.php
APP_PACKAGES_CACHE=/tmp/laravel-packages-testing.php
VIEW_COMPILED_PATH=/tmp/laravel-views-testing
